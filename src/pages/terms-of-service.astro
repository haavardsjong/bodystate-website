---
import BaseLayout from '../layouts/BaseLayout.astro';
import * as i18nUtils from '../i18n/utils';

const lang = i18nUtils.getLangFromUrl(Astro.url);
const langStrings = i18nUtils.useTranslations(lang);
const tos = langStrings.termsOfService; // Helper for termsOfService keys
---

<BaseLayout title={tos.pageTitle}>
  <article class="legal-content"> {/* Using a common class for legal pages */}
    <h1>{tos.h1_1}</h1>

    <h2>{tos.h2_1}</h2>
    <p>{tos.p1_1}</p>

    <h2>{tos.h2_2}</h2>
    <p>{tos.p2_1}</p>

    <h2>{tos.h2_3}</h2>
    <p>{tos.p3_1}</p>

    <h2>{tos.h2_4}</h2>
    <p>{tos.p4_1}</p>

    <h2>{tos.h2_5}</h2>
    <p>{tos.p5_1}</p>

    <h2>{tos.h2_6}</h2>
    <p>{tos.p6_1}</p>

    <h2>{tos.h2_7}</h2>
    <p>{tos.p7_1}</p>

    <h2>{tos.h2_8}</h2>
    <p>{tos.p8_1}</p>

    <h2>{tos.h2_9}</h2>
    <p set:html={tos.p9_1?.replace('{contactLink}', `<a href="/contact">${tos.contactLinkText}</a>`)} />

  </article>
</BaseLayout>

<style>
  /* Reuse similar styles as privacy policy */
  .legal-content {
    max-width: 800px;
    margin: var(--space-xl) auto;
    padding: 0 var(--space-md);
  }
  .legal-content h1 {
    font-size: 2.5rem;
    margin-bottom: var(--space-lg);
    text-align: center;
    font-weight: 600;
  }
  .legal-content h2 {
    font-size: 1.5rem; /* Slightly smaller H2 for ToS sections */
    font-weight: 600;
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
    border-bottom: 1px solid var(--glass-border);
    padding-bottom: var(--space-xs);
  }
  .legal-content p {
    margin-bottom: var(--space-md);
    line-height: 1.7;
    color: var(--text-secondary);
  }
  .legal-content a {
    color: var(--color-accent);
    text-decoration: underline;
  }
  .legal-content a:hover {
    text-decoration: none;
  }
</style> 