---
import BaseLayout from '../layouts/BaseLayout.astro';
import * as i18nUtils from '../i18n/utils';

const lang = i18nUtils.getLangFromUrl(Astro.url);
const t = i18nUtils.useTranslations(lang);
---
<BaseLayout title="Message Sent - BodyState">
	<div class="success-container">
		<div class="success-icon">âœ“</div>
		<h1>Thank You!</h1>
		<p>Your message has been sent successfully. We'll get back to you soon.</p>
		<a href="/" class="back-button">Back to Home</a>
	</div>
</BaseLayout>

<style>
	.success-container {
		max-width: 520px;
		margin: 0 auto;
		padding: 120px 20px;
		text-align: center;
	}
	
	.success-icon {
		width: 80px;
		height: 80px;
		margin: 0 auto 32px;
		background: #0088FF;
		color: white;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 40px;
		font-weight: 600;
	}
	
	h1 {
		font-size: 48px;
		font-weight: 600;
		margin-bottom: 16px;
		letter-spacing: -0.02em;
	}
	
	p {
		font-size: 18px;
		color: var(--text-secondary);
		margin-bottom: 48px;
		line-height: 1.6;
	}
	
	.back-button {
		display: inline-block;
		padding: 12px 32px;
		background: #0088FF;
		color: white;
		text-decoration: none;
		border-radius: 100px;
		font-size: 17px;
		font-weight: 500;
		transition: all 0.3s ease;
	}
	
	.back-button:hover {
		background-color: #0077ee;
		transform: translateY(-1px);
		box-shadow: 0 8px 24px rgba(0, 136, 255, 0.3);
	}
	
	@media (max-width: 768px) {
		.success-container {
			padding: 80px 20px;
		}
		
		h1 {
			font-size: 36px;
		}
	}
</style>