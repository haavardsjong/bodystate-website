    {/* Dropdown Interaction Script */}
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const dropdownContainer = document.querySelector('.language-switcher-dropdown');
        const button = dropdownContainer?.querySelector('.switcher-button');
        const menu = dropdownContainer?.querySelector('.dropdown-menu');

        if (!dropdownContainer || !button || !menu) return;

        const toggleDropdown = (event) => {
          event.stopPropagation(); // Prevent click from immediately propagating to document listener
          const isOpen = dropdownContainer.getAttribute('data-open') === 'true';
          dropdownContainer.setAttribute('data-open', !isOpen);
          button.setAttribute('aria-expanded', !isOpen);
        };

        const closeDropdown = () => {
          if (dropdownContainer.getAttribute('data-open') === 'true') {
            dropdownContainer.setAttribute('data-open', 'false');
            button.setAttribute('aria-expanded', 'false');
          }
        };

        button.addEventListener('click', toggleDropdown);
        
        // Close dropdown if clicking outside
        document.addEventListener('click', (event) => {
          if (!dropdownContainer.contains(event.target)) {
            closeDropdown();
          }
        });

        // Close dropdown on Escape key
        document.addEventListener('keydown', (event) => {
          if (event.key === 'Escape') {
            closeDropdown();
          }
        });
      });
    </script>
    
    {/* Mobile menu interaction script */}
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.querySelector('.mobile-menu-button');
        const mobileMenuOverlay = document.querySelector('.mobile-menu-overlay');
        const body = document.body;
        
        if (!mobileMenuButton || !mobileMenuOverlay) return;
        
        const toggleMobileMenu = () => {
          const isOpen = mobileMenuButton.getAttribute('aria-expanded') === 'true';
          mobileMenuButton.setAttribute('aria-expanded', !isOpen);
          mobileMenuButton.classList.toggle('is-active');
          mobileMenuOverlay.classList.toggle('is-open');
          body.classList.toggle('menu-open');
        };
        
        const closeMobileMenu = () => {
          mobileMenuButton.setAttribute('aria-expanded', 'false');
          mobileMenuButton.classList.remove('is-active');
          mobileMenuOverlay.classList.remove('is-open');
          body.classList.remove('menu-open');
        };
        
        mobileMenuButton.addEventListener('click', toggleMobileMenu);
        
        // Close menu when clicking on a link
        const mobileNavLinks = mobileMenuOverlay.querySelectorAll('.mobile-nav-links a');
        mobileNavLinks.forEach(link => {
          link.addEventListener('click', closeMobileMenu);
        });
        
        // Mobile language switcher
        const mobileSwitcherButton = document.querySelector('.mobile-switcher-button');
        const mobileDropdownMenu = document.querySelector('.mobile-dropdown-menu');
        
        if (mobileSwitcherButton && mobileDropdownMenu) {
          mobileSwitcherButton.addEventListener('click', (e) => {
            e.stopPropagation();
            const isOpen = mobileSwitcherButton.classList.contains('dropdown-open');
            mobileSwitcherButton.classList.toggle('dropdown-open');
            mobileDropdownMenu.classList.toggle('show');
          });
          
          // Close dropdown when clicking outside
          document.addEventListener('click', () => {
            mobileSwitcherButton.classList.remove('dropdown-open');
            mobileDropdownMenu.classList.remove('show');
          });
        }
      });
    </script>
