	}

	.footer-content-grid {
		display: grid;
		grid-template-columns: repeat(4, auto); /* 4 columns, size to content */
		gap: var(--space-lg);
		margin-bottom: var(--space-lg);
		justify-content: space-between; /* Distribute space between columns */
	}

	.footer-brand .brand-name {
		/* This style will no longer be used but can be kept or removed */
		/* font-size: 1.5rem; */
		/* font-weight: 500; */
		/* color: var(--text-primary); */
		/* margin-bottom: var(--space-xs); */
	}

