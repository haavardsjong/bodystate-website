---
// src/layouts/BaseLayout.astro
import { languages, defaultLang, getLangFromUrl, useTranslations } from '../i18n/utils'; // Import updated utils

// Props interface allows passing data like title to the layout
interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentPath = Astro.url.pathname;
const currentYear = new Date().getFullYear();
// Ensure t.footer and t.footer.copyright exist before trying to replace
const copyrightText = t?.footer?.copyright?.replace('{year}', currentYear.toString()) || `© ${currentYear} BodyState by 2001 Ventures AS. All rights reserved.`;

// Helper function to create localized paths
function localizedPath(path, targetLang) {
	const targetLocale = targetLang || lang; // Use current lang if target not specified
	
	// Handle root path for default language
	if (targetLocale === defaultLang && path === '/') return '/'; 
	if (targetLocale === defaultLang) return path.startsWith('/') ? path : '/' + path; 

	// Handle other languages (prefix required)
	if (path === '/') return `/${targetLocale}/`;
	return `/${targetLocale}${path.startsWith('/') ? path : '/' + path}`;
}

// Get the base path without the language prefix (if any)
let basePath = currentPath;
if (currentPath.startsWith(`/${lang}/`)) {
	basePath = currentPath.substring(lang.length + 1) || '/';
} else if (currentPath === `/${lang}`) { // Handles case like /es for index page
	basePath = '/';
}

const availableLocales = Object.keys(languages);

const localeDisplayInfo = {
	en: { name: 'English', flag: '🇺🇸' },
	es: { name: 'Español', flag: '🇪🇸' },
	da: { name: 'Dansk', flag: '🇩🇰' },
	fr: { name: 'Français', flag: '🇫🇷' },
	de: { name: 'Deutsch', flag: '🇩🇪' },
	it: { name: 'Italiano', flag: '🇮🇹' },
	ja: { name: '日本語', flag: '🇯🇵' },
	ko: { name: '한국어', flag: '🇰🇷' },
	nb: { name: 'Norsk Bokmål', flag: '🇳🇴' },
	pt: { name: 'Português', flag: '🇵🇹' },
	ru: { name: 'Русский', flag: '🇷🇺' },
	'zh-CN': { name: '简体中文', flag: '🇨🇳' },
	sv: { name: 'Svenska', flag: '🇸🇪' },
	'zh-TW': { name: '繁體中文', flag: '🇹🇼' }
};

const currentLocaleInfo = localeDisplayInfo[lang] || localeDisplayInfo[defaultLang]; // Fallback to default
---
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
	</head>
	<body>
		<header class="glass">
			<nav class="content-container">
				<div class="brand-name">{t?.header?.brandName}</div>
				<div class="nav-right">
					<ul class="nav-links">
						<li><a href={localizedPath('/')} class:list={{ active: currentPath === localizedPath('/') }}>{t?.header?.homeLink}</a></li>
						<li><a href={localizedPath('/faq')} class:list={{ active: currentPath === localizedPath('/faq') }}>{t?.header?.faqLink}</a></li>
						<li><a href={localizedPath('/contact')} class:list={{ active: currentPath === localizedPath('/contact') }}>{t?.header?.contactLink}</a></li>
					</ul>
					{/* Language Switcher Dropdown */}
					<div class="language-switcher-dropdown">
						<button type="button" class="switcher-button" aria-label="Select language" aria-haspopup="true" aria-expanded="false">
							<span class="current-lang-flag">{currentLocaleInfo.flag}</span>
							<svg class="chevron-down" width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
						</button>
						<ul class="dropdown-menu" role="menu">
							{availableLocales.map(localeCode => {
								const displayInfo = localeDisplayInfo[localeCode] || { name: localeCode, flag: '🌐' }; // Fallback for missing info
								return (
									<li role="presentation">
										<a 
											href={localizedPath(basePath, localeCode)} 
											role="menuitem"
											class:list={{ active: lang === localeCode }}
											lang={localeCode} // Indicate the language of the link target
										>
											<span class="flag">{displayInfo.flag}</span> {displayInfo.name}
										</a>
									</li>
								);
							})}
						</ul>
					</div>
					{/* The download button link points to the App Store */}
					<a href="https://apps.apple.com/no/app/bodystate/id6479940325" class="nav-download-btn apple-button-style" target="_blank" rel="noopener noreferrer">{t?.header?.downloadButton}</a>
				</div>
				{/* TODO: Add hamburger button for mobile */}
			</nav>
		</header>
		<main class="content-container">
			<slot /> {/* Page content will be injected here */}
		</main>
		<footer class="site-footer glass">
			<div class="content-container footer-content-grid">
				<div class="footer-links">
					<h4>{t?.footer?.quickLinks}</h4>
					<ul>
						<li><a href={localizedPath('/')}>{t?.footer?.homeLink}</a></li>
						<li><a href={localizedPath('/faq')}>{t?.footer?.faqLink}</a></li>
						<li><a href={localizedPath('/contact')}>{t?.footer?.contactLink}</a></li>
						<li><a href="#">{t?.footer?.appStoreLink}</a></li> 
					</ul>
				</div>
				<div class="footer-legal">
					<h4>{t?.footer?.legal}</h4>
					<ul>
						<li><a href={localizedPath('/privacy-policy')}>{t?.footer?.privacyPolicyLink}</a></li> 
						<li><a href={localizedPath('/terms-of-service')}>{t?.footer?.termsOfServiceLink}</a></li> 
					</ul>
				</div>
				<div class="footer-social">
					<h4>{t?.footer?.connect}</h4>
					<ul class="social-icons">
						<li><a href="https://x.com/bodystate" target="_blank" rel="noopener noreferrer" aria-label="Twitter">{t?.footer?.twitterLink}</a></li>
						<li><a href="https://www.instagram.com/bodystateapp/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">{t?.footer?.instagramLink}</a></li>
						<li><a href="https://www.tiktok.com/@bodystate.app?_t=ZN-8tkSXvc0zAs&_r=1" target="_blank" rel="noopener noreferrer" aria-label="TikTok">{t?.footer?.tiktokLink}</a></li>
						<li><a href="https://www.threads.net/@bodystateapp?igshid=NTc4MTIwNjQ2YQ==" target="_blank" rel="noopener noreferrer" aria-label="Threads">Threads</a></li>
						<li><a href="https://substack.com/@bodystate" target="_blank" rel="noopener noreferrer" aria-label="Substack">Substack</a></li>
					</ul>
				</div>
				<div class="footer-extra-links">
					<h4>{t?.footer?.resources}</h4>
					<div class="footer-buttons">
						<div class="footer-button-item">
							<script type="text/javascript" src="https://cdnjs.buymeacoffee.com/1.0.0/button.prod.min.js" data-name="bmc-button" data-slug="bodystate" data-color="#FFDD00" data-emoji="☕"  data-font="Cookie" data-text="Buy me a coffee" data-outline-color="#000000" data-font-color="#000000" data-coffee-color="#ffffff" ></script>
						</div>
						<div class="footer-button-item">
							<a href="https://www.producthunt.com/products/bodystate?embed=true&utm_source=badge-top-post-badge&utm_medium=badge&utm_source=badge-bodystate" target="_blank"><img src="https://api.producthunt.com/widgets/embed-image/v1/top-post-badge.svg?post_id=739527&theme=dark&period=daily&t=1752517132959" alt="BodyState - Energy&#0032;Tracking&#0032;for&#0032;Your&#0032;Apple&#0032;Watch | Product Hunt" style="width: 250px; height: 54px;" width="250" height="54" /></a>
						</div>
					</div>
				</div>
			</div>
			<div class="content-container footer-copyright">
				<p>{copyrightText}</p>
			</div>
		</footer>
		<script>
			const header = document.querySelector('header');
			
			const handleScroll = () => {
				if (window.scrollY > 10) { // Add class after scrolling down a bit
					header.classList.add('scrolled');
				} else {
					header.classList.remove('scrolled');
				}
			};
			
			// Listen for scroll events
			window.addEventListener('scroll', handleScroll);
			
			// Initial check in case the page loads already scrolled
			handleScroll();
		</script>

    {/* Dropdown Interaction Script */}
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const dropdownContainer = document.querySelector('.language-switcher-dropdown');
        const button = dropdownContainer?.querySelector('.switcher-button');
        const menu = dropdownContainer?.querySelector('.dropdown-menu');

        if (!dropdownContainer || !button || !menu) return;

        const toggleDropdown = (event) => {
          event.stopPropagation(); // Prevent click from immediately propagating to document listener
          const isOpen = dropdownContainer.getAttribute('data-open') === 'true';
          dropdownContainer.setAttribute('data-open', !isOpen);
          button.setAttribute('aria-expanded', !isOpen);
        };

        const closeDropdown = () => {
          if (dropdownContainer.getAttribute('data-open') === 'true') {
            dropdownContainer.setAttribute('data-open', 'false');
            button.setAttribute('aria-expanded', 'false');
          }
        };

        button.addEventListener('click', toggleDropdown);
        
        // Close dropdown if clicking outside
        document.addEventListener('click', (event) => {
          if (!dropdownContainer.contains(event.target)) {
            closeDropdown();
          }
        });

        // Close dropdown on Escape key
        document.addEventListener('keydown', (event) => {
          if (event.key === 'Escape') {
            closeDropdown();
          }
        });
      });
    </script>
	</body>
</html>

<style is:global>
	:root {
		/* visionOS-inspired design tokens */
		--font-main: 'Inter', system-ui, sans-serif;
		--radius-sm: 10px;
		--radius-md: 16px;
		--radius-lg: 24px;
		
		/* Glass effect variables */
		--glass-bg: rgba(30, 30, 33, 0.65);
		--glass-border: rgba(255, 255, 255, 0.08);
		--glass-glow: rgba(120, 235, 255, 0.1);
		--glass-shadow: rgba(0, 0, 0, 0.3);
		
		/* Primary teal accent color (visible in the iPhone image) */
		--color-accent: rgb(96, 221, 220);
		--color-accent-glow: rgba(96, 221, 220, 0.4);
		
		/* Text colors */
		--text-primary: rgba(255, 255, 255, 0.95);
		--text-secondary: rgba(255, 255, 255, 0.7);
		--text-tertiary: rgba(255, 255, 255, 0.5);
		
		/* Spacing */
		--space-xs: 0.5rem;
		--space-sm: 1rem;
		--space-md: 1.5rem;
		--space-lg: 2rem;
		--space-xl: 3rem;
		
		--nav-height: 64px;
	}
	
	html {
		font-family: var(--font-main);
		background-color: #000;
		color: var(--text-primary);
		overflow-x: hidden;
	}
	
	body {
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		position: relative;
		line-height: 1.6;
	}
	
	main {
		flex-grow: 1;
		position: relative;
		margin-bottom: var(--space-xl); /* Add margin to prevent overlap with footer */
	}
	
	/* Glassmorphism class */
	.glass {
		background: var(--glass-bg);
		backdrop-filter: blur(15px);
		-webkit-backdrop-filter: blur(15px);
		border-top: 1px solid var(--glass-border);
		border-bottom: 1px solid var(--glass-border);
		box-shadow: 0 5px 20px var(--glass-shadow);
	}
	
	/* Bento box styling */
	.bento-box {
		background: var(--glass-bg);
		backdrop-filter: blur(15px);
		-webkit-backdrop-filter: blur(15px);
		border-radius: var(--radius-lg);
		border: 1px solid var(--glass-border);
		padding: var(--space-md);
		box-shadow: 0 8px 32px var(--glass-shadow);
		transition: all 0.3s ease;
	}
	
	.bento-box:hover {
		box-shadow: 0 8px 40px var(--glass-shadow), 0 0 15px var(--glass-glow);
		border-color: rgba(255, 255, 255, 0.15);
	}
	
	/* Buttons */
	.btn {
		background: var(--glass-bg);
		color: var(--text-primary);
		border: 1px solid var(--glass-border);
		border-radius: var(--radius-md);
		padding: var(--space-sm) var(--space-lg);
		font-weight: 500;
		cursor: pointer;
		transition: all 0.3s ease;
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		display: inline-block;
		text-align: center;
	}
	
	.btn:hover {
		background: rgba(50, 50, 55, 0.8);
		border-color: var(--color-accent);
		box-shadow: 0 0 15px var(--color-accent-glow);
	}
	
	.btn-accent {
		background: rgba(96, 221, 220, 0.15);
		border-color: var(--color-accent);
	}
	
	.btn-accent:hover {
		background: rgba(96, 221, 220, 0.25);
	}
	
	.btn-large {
		padding: var(--space-md) var(--space-xl);
		font-size: 1.1rem;
		font-weight: 400;
		letter-spacing: 0.5px;
	}
	
	/* Typography */
	h1 {
		font-weight: 600;
		font-size: 2.5rem;
		margin-bottom: var(--space-lg);
		letter-spacing: -0.5px;
	}
	
	h2 {
		font-weight: 500;
		font-size: 1.75rem;
		color: var(--text-primary);
		letter-spacing: -0.3px;
	}
	
	p {
		color: var(--text-secondary);
		font-weight: 400;
	}
	
	a {
		color: var(--text-primary);
		text-decoration: none;
		transition: all 0.2s ease;
	}
	
	a:hover {
		color: var(--color-accent);
	}
	
	/* Content container */
	.content-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--space-md);
		width: 100%;
		box-sizing: border-box;
	}
	
	/* Download button overlay */
	.download-overlay {
		position: fixed;
		bottom: var(--space-lg);
		left: 50%;
		transform: translateX(-50%);
		z-index: 100;
	}
</style>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 10;
		width: 100%;
		/* Default transparent state */
		background: transparent;
		backdrop-filter: none;
		-webkit-backdrop-filter: none;
		border-top: none;
		border-bottom: none;
		box-shadow: none;
		transition: background 0.3s ease, backdrop-filter 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
	}
	
	header.scrolled {
		/* Apply glass effect when scrolled */
		background: var(--glass-bg);
		backdrop-filter: blur(15px);
		-webkit-backdrop-filter: blur(15px);
		border-bottom: 1px solid var(--glass-border);
		box-shadow: 0 5px 20px var(--glass-shadow);
	}
	
	nav {
		height: var(--nav-height);
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	
	.brand-name {
		font-size: 24px;
		font-weight: 500;
		letter-spacing: 0px;
		color: var(--text-primary);
		font-family: var(--font-main);
	}
	
	.nav-right {
		display: flex;
		align-items: center;
		gap: var(--space-lg);
	}
	
	nav ul.nav-links {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: var(--space-lg);
	}
	
	nav a {
		padding: var(--space-xs) 0;
		font-weight: 300;
		letter-spacing: 0.3px;
		position: relative;
		font-family: var(--font-main);
		font-size: 14px;
	}
	
	nav ul.nav-links > li > a.active { /* Made selector more specific */
		color: var(--text-primary);
		font-weight: 400;
	}
	
	nav ul.nav-links > li > a.active::after { /* Made selector more specific */
		content: '';
		position: absolute;
		bottom: -3px;
		left: 0;
		width: 100%;
		height: 2px;
		background: var(--color-accent);
