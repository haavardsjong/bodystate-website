		.footer-content-grid {
			grid-template-columns: 1fr; /* Stack everything */
			text-align: center;
		}
		.footer-social ul.social-icons { /* Adjusted selector */
			justify-content: center; /* This will only apply if display is flex, which it isn't anymore. Text-align on parent will handle it. */
		}
