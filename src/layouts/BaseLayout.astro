---
// src/layouts/BaseLayout.astro
import { languages, defaultLang, getLangFromUrl, useTranslations } from '../i18n/utils'; // Import updated utils

// Props interface allows passing data like title to the layout
interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentPath = Astro.url.pathname;
const currentYear = new Date().getFullYear();

// EU countries list
const euCountries = ['de', 'fr', 'it', 'es', 'nl', 'sv', 'da'];
const isEU = euCountries.includes(lang);
// For Norwegian language (nb), always show Norge regardless of location
// For other languages, show Europe if in EU, otherwise show the translation of Norway
const location = lang === 'nb' ? 'Norge' : (isEU ? (t?.footer?.locationEurope || 'Europe') : (t?.footer?.locationNorway || 'Norway'));

// Helper function to create localized paths
function localizedPath(path, targetLang) {
	const targetLocale = targetLang || lang; // Use current lang if target not specified
	
	// Handle root path for default language
	if (targetLocale === defaultLang && path === '/') return '/'; 
	if (targetLocale === defaultLang) return path.startsWith('/') ? path : '/' + path; 

	// Handle other languages (prefix required)
	if (path === '/') return `/${targetLocale}/`;
	return `/${targetLocale}${path.startsWith('/') ? path : '/' + path}`;
}

// Get the base path without the language prefix (if any)
let basePath = currentPath;
if (currentPath.startsWith(`/${lang}/`)) {
	basePath = currentPath.substring(lang.length + 1) || '/';
} else if (currentPath === `/${lang}`) { // Handles case like /es for index page
	basePath = '/';
}

const availableLocales = Object.keys(languages);

const localeDisplayInfo = {
	en: { name: 'English', flag: '🇺🇸' },
	es: { name: 'Español', flag: '🇪🇸' },
	da: { name: 'Dansk', flag: '🇩🇰' },
	fr: { name: 'Français', flag: '🇫🇷' },
	de: { name: 'Deutsch', flag: '🇩🇪' },
	it: { name: 'Italiano', flag: '🇮🇹' },
	ja: { name: '日本語', flag: '🇯🇵' },
	ko: { name: '한국어', flag: '🇰🇷' },
	nb: { name: 'Norsk Bokmål', flag: '🇳🇴' },
	pt: { name: 'Português', flag: '🇵🇹' },
	ru: { name: 'Русский', flag: '🇷🇺' },
	'zh-CN': { name: '简体中文', flag: '🇨🇳' },
	sv: { name: 'Svenska', flag: '🇸🇪' },
	'zh-TW': { name: '繁體中文', flag: '🇹🇼' }
};

const currentLocaleInfo = localeDisplayInfo[lang] || localeDisplayInfo[defaultLang]; // Fallback to default
---
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
	</head>
	<body>
		<header class="glass">
			<nav class="content-container">
				<a href={localizedPath('/')} class="brand-name">{t?.header?.brandName}</a>
				<div class="nav-right">
					<ul class="nav-links">
						<li><a href={localizedPath('/')} class:list={{ active: currentPath === localizedPath('/') }}>{t?.header?.homeLink}</a></li>
						<li><a href={localizedPath('/faq')} class:list={{ active: currentPath === localizedPath('/faq') }}>{t?.header?.faqLink}</a></li>
						<li><a href={localizedPath('/contact')} class:list={{ active: currentPath === localizedPath('/contact') }}>{t?.header?.contactLink}</a></li>
					</ul>
					{/* Language Switcher Dropdown */}
					<div class="language-switcher-dropdown">
						<button type="button" class="switcher-button" aria-label="Select language" aria-haspopup="true" aria-expanded="false">
							<span class="current-lang-flag">{currentLocaleInfo.flag}</span>
							<svg class="chevron-down" width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
						</button>
						<ul class="dropdown-menu" role="menu">
							{availableLocales.map(localeCode => {
								const displayInfo = localeDisplayInfo[localeCode] || { name: localeCode, flag: '🌐' }; // Fallback for missing info
								return (
									<li role="presentation">
										<a 
											href={localizedPath(basePath, localeCode)} 
											role="menuitem"
											class:list={{ active: lang === localeCode }}
											lang={localeCode} // Indicate the language of the link target
										>
											<span class="flag">{displayInfo.flag}</span> {displayInfo.name}
										</a>
									</li>
								);
							})}
						</ul>
					</div>
					{/* The download button link points to the App Store */}
					<a href="https://apps.apple.com/no/app/bodystate/id6479940325" class="nav-download-btn apple-button-style" target="_blank" rel="noopener noreferrer">
						<span class="full-text">{t?.header?.downloadButton}</span>
						<span class="short-text">Download Now</span>
					</a>
					{/* Mobile menu button */}
					<button class="mobile-menu-button" aria-label="Toggle mobile menu" aria-expanded="false">
						<span class="hamburger-line"></span>
						<span class="hamburger-line"></span>
					</button>
				</div>
			</nav>
		</header>
		{/* Mobile menu overlay */}
		<div class="mobile-menu-overlay">
			<button class="mobile-close-button" aria-label="Close menu">
				<svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
			</button>
			<nav class="mobile-nav">
				<ul class="mobile-nav-links">
					<li><a href={localizedPath('/')} class:list={{ active: currentPath === localizedPath('/') }}>{t?.header?.homeLink}</a></li>
					<li><a href={localizedPath('/faq')} class:list={{ active: currentPath === localizedPath('/faq') }}>{t?.header?.faqLink}</a></li>
					<li><a href={localizedPath('/contact')} class:list={{ active: currentPath === localizedPath('/contact') }}>{t?.header?.contactLink}</a></li>
					<li><a href="https://apps.apple.com/no/app/bodystate/id6479940325" target="_blank" rel="noopener noreferrer">Download</a></li>
					<li class="mobile-language-item">
						<a href="#" class="mobile-language-toggle" aria-label="Select language" onclick="return false;">
							<span>{currentLocaleInfo.name}</span>
							<svg class="chevron-down" width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
						</a>
						<ul class="mobile-dropdown-menu" role="menu">
							{availableLocales.map(localeCode => {
								const displayInfo = localeDisplayInfo[localeCode] || { name: localeCode, flag: '🌐' };
								return (
									<li role="presentation">
										<a 
											href={localizedPath(basePath, localeCode)} 
											role="menuitem"
											class:list={{ active: lang === localeCode }}
										>
											{displayInfo.name}
										</a>
									</li>
								);
							})}
						</ul>
					</li>
				</ul>
			</nav>
		</div>
		<main class="content-container">
			<slot /> {/* Page content will be injected here */}
		</main>
		<footer class="site-footer glass">
			<div class="content-container footer-content-grid">
				<div class="footer-links">
					<h4>{t?.footer?.quickLinks}</h4>
					<ul>
						<li><a href={localizedPath('/')}>{t?.footer?.homeLink}</a></li>
						<li><a href={localizedPath('/faq')}>{t?.footer?.faqLink}</a></li>
						<li><a href={localizedPath('/contact')}>{t?.footer?.contactLink}</a></li>
						<li><a href="#">{t?.footer?.appStoreLink}</a></li> 
					</ul>
				</div>
				<div class="footer-legal">
					<h4>{t?.footer?.legal}</h4>
					<ul>
						<li><a href={localizedPath('/privacy-policy')}>{t?.footer?.privacyPolicyLink}</a></li> 
						<li><a href={localizedPath('/terms-of-service')}>{t?.footer?.termsOfServiceLink}</a></li>
						<li><a href="https://2001.ventures" target="_blank" rel="noopener noreferrer">2001 Ventures AS</a></li>
					</ul>
				</div>
				<div class="footer-social">
					<h4>{t?.footer?.connect}</h4>
					<ul class="social-icons">
						<li><a href="https://x.com/bodystate" target="_blank" rel="noopener noreferrer" aria-label="Twitter">{t?.footer?.twitterLink}</a></li>
						<li><a href="https://www.instagram.com/bodystateapp/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">{t?.footer?.instagramLink}</a></li>
						<li><a href="https://www.tiktok.com/@bodystate.app?_t=ZN-8tkSXvc0zAs&_r=1" target="_blank" rel="noopener noreferrer" aria-label="TikTok">{t?.footer?.tiktokLink}</a></li>
						<li><a href="https://www.threads.net/@bodystateapp?igshid=NTc4MTIwNjQ2YQ==" target="_blank" rel="noopener noreferrer" aria-label="Threads">Threads</a></li>
						<li><a href="https://substack.com/@bodystate" target="_blank" rel="noopener noreferrer" aria-label="Substack">Substack</a></li>
					</ul>
				</div>
				<div class="footer-extra-links">
					<h4>{t?.footer?.resources}</h4>
					<div class="footer-buttons">
						<div class="footer-button-item">
							<script type="text/javascript" src="https://cdnjs.buymeacoffee.com/1.0.0/button.prod.min.js" data-name="bmc-button" data-slug="bodystate" data-color="#FFDD00" data-emoji="☕"  data-font="Cookie" data-text="Buy me a coffee" data-outline-color="#000000" data-font-color="#000000" data-coffee-color="#ffffff" ></script>
						</div>
						<div class="footer-button-item">
							<a href="https://www.producthunt.com/products/bodystate?embed=true&utm_source=badge-top-post-badge&utm_medium=badge&utm_source=badge-bodystate" target="_blank"><img src="https://api.producthunt.com/widgets/embed-image/v1/top-post-badge.svg?post_id=739527&theme=dark&period=daily&t=1752517132959" alt="BodyState - Energy&#0032;Tracking&#0032;for&#0032;Your&#0032;Apple&#0032;Watch | Product Hunt" style="width: 250px; height: 54px;" width="250" height="54" /></a>
						</div>
					</div>
				</div>
			</div>
			<div class="content-container footer-copyright">
				<p>© {(t?.footer?.madeWithLove || 'Made with ❤️ in {location} by').replace('{location}', location)} 2001 Ventures AS</p>
			</div>
		</footer>
		<script>
			const header = document.querySelector('header');
			let lastScrollY = window.scrollY;
			let ticking = false;
			
			const handleScroll = () => {
				const currentScrollY = window.scrollY;
				const isMobile = window.innerWidth <= 768;
				
				// Always handle glass effect
				if (currentScrollY > 10) {
					header.classList.add('scrolled');
				} else {
					header.classList.remove('scrolled');
				}
				
				// Handle show/hide on mobile only
				if (isMobile) {
					if (currentScrollY > lastScrollY && currentScrollY > 100) {
						// Scrolling down - hide header
						header.classList.add('header-hidden');
					} else {
						// Scrolling up - show header
						header.classList.remove('header-hidden');
					}
				} else {
					// On desktop, always show header
					header.classList.remove('header-hidden');
				}
				
				lastScrollY = currentScrollY;
				ticking = false;
			};
			
			const requestTick = () => {
				if (!ticking) {
					window.requestAnimationFrame(handleScroll);
					ticking = true;
				}
			};
			
			// Listen for scroll events
			window.addEventListener('scroll', requestTick);
			
			// Listen for resize to handle mobile/desktop switch
			window.addEventListener('resize', () => {
				if (window.innerWidth > 768) {
					header.classList.remove('header-hidden');
				}
			});
			
			// Initial check
			handleScroll();
		</script>

    {/* Dropdown Interaction Script */}
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const dropdownContainer = document.querySelector('.language-switcher-dropdown');
        const button = dropdownContainer?.querySelector('.switcher-button');
        const menu = dropdownContainer?.querySelector('.dropdown-menu');

        if (!dropdownContainer || !button || !menu) return;

        const toggleDropdown = (event) => {
          event.stopPropagation(); // Prevent click from immediately propagating to document listener
          const isOpen = dropdownContainer.getAttribute('data-open') === 'true';
          dropdownContainer.setAttribute('data-open', !isOpen);
          button.setAttribute('aria-expanded', !isOpen);
        };

        const closeDropdown = () => {
          if (dropdownContainer.getAttribute('data-open') === 'true') {
            dropdownContainer.setAttribute('data-open', 'false');
            button.setAttribute('aria-expanded', 'false');
          }
        };

        button.addEventListener('click', toggleDropdown);
        
        // Close dropdown if clicking outside
        document.addEventListener('click', (event) => {
          if (!dropdownContainer.contains(event.target)) {
            closeDropdown();
          }
        });

        // Close dropdown on Escape key
        document.addEventListener('keydown', (event) => {
          if (event.key === 'Escape') {
            closeDropdown();
          }
        });
      });
    </script>
    
    {/* Mobile menu interaction script */}
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.querySelector('.mobile-menu-button');
        const mobileMenuOverlay = document.querySelector('.mobile-menu-overlay');
        const body = document.body;
        let scrollPosition = 0;
        
        if (!mobileMenuButton || !mobileMenuOverlay) return;
        
        const toggleMobileMenu = () => {
          const isOpen = mobileMenuButton.getAttribute('aria-expanded') === 'true';
          
          if (!isOpen) {
            // Opening menu - store scroll position and lock body
            scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
            body.style.top = `-${scrollPosition}px`;
            body.classList.add('menu-open');
            
            // Prevent touch scrolling on the overlay
            mobileMenuOverlay.addEventListener('touchmove', preventScroll, { passive: false });
          } else {
            // Closing menu - restore scroll position
            body.classList.remove('menu-open');
            body.style.top = '';
            window.scrollTo(0, scrollPosition);
            
            // Remove touch scroll prevention
            mobileMenuOverlay.removeEventListener('touchmove', preventScroll);
          }
          
          mobileMenuButton.setAttribute('aria-expanded', !isOpen);
          mobileMenuButton.classList.toggle('is-active');
          mobileMenuOverlay.classList.toggle('is-open');
        };
        
        const closeMobileMenu = () => {
          // Restore scroll position
          body.classList.remove('menu-open');
          body.style.top = '';
          window.scrollTo(0, scrollPosition);
          
          // Remove touch scroll prevention
          mobileMenuOverlay.removeEventListener('touchmove', preventScroll);
          
          mobileMenuButton.setAttribute('aria-expanded', 'false');
          mobileMenuButton.classList.remove('is-active');
          mobileMenuOverlay.classList.remove('is-open');
        };
        
        const preventScroll = (e) => {
          e.preventDefault();
        };
        
        mobileMenuButton.addEventListener('click', toggleMobileMenu);
        
        // Close button
        const closeButton = document.querySelector('.mobile-close-button');
        if (closeButton) {
          closeButton.addEventListener('click', closeMobileMenu);
        }
        
        // Close menu when clicking on a link (except language toggle)
        const mobileNavLinks = mobileMenuOverlay.querySelectorAll('.mobile-nav-links a:not(.mobile-language-toggle)');
        mobileNavLinks.forEach(link => {
          link.addEventListener('click', closeMobileMenu);
        });
        
        // Mobile language switcher
        const mobileLanguageToggle = document.querySelector('.mobile-language-toggle');
        const mobileDropdownMenu = document.querySelector('.mobile-dropdown-menu');
        
        if (mobileLanguageToggle && mobileDropdownMenu) {
          mobileLanguageToggle.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            const isOpen = mobileLanguageToggle.classList.contains('dropdown-open');
            mobileLanguageToggle.classList.toggle('dropdown-open');
            mobileDropdownMenu.classList.toggle('show');
          });
          
          // Close dropdown when clicking outside
          document.addEventListener('click', () => {
            mobileLanguageToggle.classList.remove('dropdown-open');
            mobileDropdownMenu.classList.remove('show');
          });
          
          // Prevent dropdown from closing when clicking inside it
          mobileDropdownMenu.addEventListener('click', (e) => {
            e.stopPropagation();
          });
        }
      });
    </script>
	</body>
</html>

